<br><br><br><br>
<div class = "row">
<div class = "col-md-8">
<%= image_tag 'login1.webp', width: '100%' %>
</div>
<div class  = "col-md-4">
<h1>Log In</h1>
<%= form_with url: session_path do |f| %>
  <br>
  <div class="form-group">
    <%= f.email_field :email, class:'form-control form-control-lg', placeholder: 'please enter the email here' %>
  </div>
  <br>

  <div class="field">
    <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: 'please enter your password here' %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit 'Log In', class: 'btn btn-info btn-lg btn-block' %>
  </div>
  <br>

  <div class="field">
  Already have an account
    <%= link_to 'Sign Up', signup_path, class: 'btn btn-info btn-lg btn-block' %>
  </div>
  <br>

<% end %>
</div>
</div>


