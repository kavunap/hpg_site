<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Sender name</th>
      <th>Sender phone</th>
      <th>Sender email</th>
      <th>Sender address</th>
      <th>Card name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.sender_name %></td>
        <td><%= request.sender_phone %></td>
        <td><%= request.sender_email %></td>
        <td><%= request.sender_address %></td>
        <td><%= request.card_name %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
