<h1>Posts about HPG </h1>

<div class = "row">
<% @posts.each do |post| %>
  <div class = "col-sm-4">
    <div class = "card">
      
        <%= image_tag post.image.url, height: '500px' %>
        <p><%= post.title %></p>
        <p><%= post.content %></p>
     
    </div>
  </div>
  <% end %>
</div>

    <%= link_to 'New Post', new_post_path %>
